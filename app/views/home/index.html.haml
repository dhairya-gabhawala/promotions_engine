.relative
	%div{class: "absolute inset-2 bottom-0 rounded-3xl ring-1 ring-inset ring-black/5 bg-[linear-gradient(115deg,var(--tw-gradient-stops))] from-[#fff1be] from-[28%] via-[#ee87cb] via-[70%] to-[#b060ff] sm:bg-[linear-gradient(145deg,var(--tw-gradient-stops))]"}
	%div{class: "relative px-6 lg:px-8"}
		%div{class: "mx-auto max-w-2xl lg:max-w-7xl"}
			%header{class: "pt-12 sm:pt-16"}
				%div
					%div{class: "relative flex justify-between group/row relative isolate pt-[calc(theme(spacing.2)+1px)] last:pb-[calc(theme(spacing.2)+1px)]"}
						%div{class: "absolute inset-y-0 left-1/2 -z-10 w-screen -translate-x-1/2"}
							%div{class: "absolute inset-x-0 top-0 border-t border-black/5"}
							%div{class: "absolute inset-x-0 top-2 border-t border-black/5"}
							%div{class: "absolute inset-x-0 bottom-0 hidden border-b border-black/5 group-last/row:block"}
							%div{class: "absolute inset-x-0 bottom-2 hidden border-b border-black/5 group-last/row:block"}
						.relative.flex.gap-6
							%div{class: "py-3 relative group/item"}
								%svg{"aria-hidden" => "true", class: "hidden absolute -top-2 -left-2 group-first/item:block size-[15px] fill-black/10", viewbox: "0 0 15 15"}
									%path{d: "M8 0H7V7H0V8H7V15H8V8H15V7H8V0Z"}
								%svg{"aria-hidden" => "true", class: "absolute -top-2 -right-2 size-[15px] fill-black/10", viewbox: "0 0 15 15"}
									%path{d: "M8 0H7V7H0V8H7V15H8V8H15V7H8V0Z"}
								%svg{"aria-hidden" => "true", class: "hidden absolute -bottom-2 -left-2 group-last/row:group-first/item:block size-[15px] fill-black/10", viewbox: "0 0 15 15"}
									%path{d: "M8 0H7V7H0V8H7V15H8V8H15V7H8V0Z"}
								%svg{"aria-hidden" => "true", class: "hidden absolute -bottom-2 -right-2 group-last/row:block size-[15px] fill-black/10", viewbox: "0 0 15 15"}
									%path{d: "M8 0H7V7H0V8H7V15H8V8H15V7H8V0Z"}
								= link_to root_path, title: "Promotions Engine", class: "flex justify-between items-center" do
									= render partial: "shared/logo"
									%span.font-medium.text-gray-950.text-2xl.mx-3
										Promotions Engine
						%nav{class: "relative flex"}
							%div{class: "relative flex relative group/item"}
								%svg{"aria-hidden" => "true", class: "hidden absolute -top-2 -left-2 group-first/item:block size-[15px] fill-black/10", viewbox: "0 0 15 15"}
									%path{d: "M8 0H7V7H0V8H7V15H8V8H15V7H8V0Z"}
								%svg{"aria-hidden" => "true", class: "absolute -top-2 -right-2 size-[15px] fill-black/10", viewbox: "0 0 15 15"}
									%path{d: "M8 0H7V7H0V8H7V15H8V8H15V7H8V0Z"}
								%svg{"aria-hidden" => "true", class: "hidden absolute -bottom-2 -left-2 group-last/row:group-first/item:block size-[15px] fill-black/10", viewbox: "0 0 15 15"}
									%path{d: "M8 0H7V7H0V8H7V15H8V8H15V7H8V0Z"}
								%svg{"aria-hidden" => "true", class: "hidden absolute -bottom-2 -right-2 group-last/row:block size-[15px] fill-black/10", viewbox: "0 0 15 15"}
									%path{d: "M8 0H7V7H0V8H7V15H8V8H15V7H8V0Z"}
								- if current_user
									= link_to "Logout", destroy_user_session_path, data: {turbo_method: :delete}, class: "flex items-center px-4 py-3 text-base font-medium text-gray-950 bg-blend-multiply hover:bg-black/[2.5%]"
								- else
									= link_to "Login", new_user_session_path, class: "flex items-center px-4 py-3 text-base font-medium text-gray-950 bg-blend-multiply hover:bg-black/[2.5%]"
			%div{class: "pb-24 pt-16 sm:pb-32 sm:pt-24 md:pb-48 md:pt-32"}
				%h1{class: "font-display text-balance text-6xl/[0.9] font-medium tracking-tight text-gray-950 sm:text-8xl/[0.8] md:text-9xl/[0.8]"}
					Manage Promotions
				%p{class: "mt-8 max-w-lg text-xl/7 font-medium text-gray-950/75 sm:text-2xl/8"}
					Simplified rules engine to
					%br
					deliver promotions conditionally.
				%div{class: "mt-12 flex flex-col gap-x-6 gap-y-4 sm:flex-row"}
					= link_to "Login", new_user_session_path, class: "inline-flex items-center justify-center px-4 py-[calc(theme(spacing.2)-1px)] rounded-full border border-transparent bg-gray-950 shadow-md whitespace-nowrap text-base font-medium text-white disabled:bg-gray-950 data-[hover]:bg-gray-800 disabled:opacity-40"