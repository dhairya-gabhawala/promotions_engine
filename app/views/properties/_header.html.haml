%div{class: "py-6"}
	%header
		%div{class: "mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 grid grid-cols-1 lg:grid-cols-2 gap-4"}
			%div.flex.align-middle
				%h1{class: "text-3xl font-bold"}
					= property.name
				= link_to edit_property_path(property), class: "relative rounded-full p-1 text-gray-400" do
					%svg.h-6.w-6{fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24", xmlns: "http://www.w3.org/2000/svg"}
						%path{d: "m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
			%div.block
				%p.block
					%strong API Key: 
					%span #{property.api_key}
				%p.block
					%strong Secret:
					%span #{property.secret}